<h2><%= @movie[:title] %></h2>
<%= form_with url: events_path, local: :true do |f| %>
  <%= f.label :duration, "Duration:" %>
  <%= f.number_field :duration, name: 'duration_hours', placeholder: 'hours' %>
  <%= f.number_field :duration, name: 'duration_minutes', placeholder: 'minutes', max: 59 %>
  <%= f.label :date, "Date:" %>
  <%= f.date_field :date %>
  <%= f.label :time, "Time:" %>
  <%= f.time_field :time %>
  <%= f.label :friends, "Invite your friends:" %>
  <%= f.collection_check_boxes :friends, @user.friends, :id, :username %>
  <%= f.submit 'Create Viewing Party' %>
<% end %>